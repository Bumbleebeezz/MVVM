<Window
    x:Class="MVVM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MVVM.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontFamily="Yu Gothic Light"
    FontSize="20"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Reverse">
                <views:DemoView DataContext="{Binding DemoViewModel}" Grid.Row="0"/>
            </TabItem>
            <TabItem Header="People">
                <views:PeopleView DataContext="{Binding PeopleViewModel}" Grid.Row="1"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
